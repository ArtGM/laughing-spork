{% extends ea is defined ? ea.templatePath('layout') : '!@EasyAdmin/page/login_minimal.html.twig' %}
{% block body_class 'page-login' %}
{% block title %}Reinitialisation de mot de passe{% endblock %}

{% block wrapper_wrapper %}
    <div class="login-wrapper">
        <section class="content">
            <h3 class="text-center">Reinitialisation de mot de passe</h3>

            <span id="popover-password-top" class="d-block text-center pull-right block-help"><i class="fa fa-info-circle text-danger" aria-hidden="true"></i> Entrez un mot de passe fort</span>
            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div id="popover-password">
                <p><small>Qualité du mot de passe: <span id="result"> </span></small></p>
                <div class="progress">
                    <div id="password-strength" class="progress-bar bg-success" role="progressbar"
                         aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                    </div>
                </div>
                <ul class="list-unstyled mt-2">
                    <li class="list-group-item"><span class="low-upper-case"><i class="fa fa-file-text" aria-hidden="true"></i></span>&nbsp;
                        1 miniscule &amp; 1 Majuscule
                    </li>
                    <li class="list-group-item"><span class="one-number"><i class="fa fa-file-text" aria-hidden="true"></i></span>
                        &nbsp;1 nombre (0-9)
                    </li>
                    <li class="list-group-item"><span class="one-special-char"><i class="fa fa-file-text"
                                                                                  aria-hidden="true"></i></span> &nbsp;1 Caractère Spécial (!@#$%^&*).
                    </li>
                    <li class="list-group-item"><span class="eight-character"><i class="fa fa-file-text" aria-hidden="true"></i></span>&nbsp;
                        Au moins 8 caractères
                    </li>
                </ul>
            </div>

            <button id="resetNew" class="btn btn-primary">Réinitialiser le mot de passe</button>
            {{ form_end(resetForm) }}
        </section>

    </div>
    <style>
        .progress {
            height: 5px;
        }
        select.form-control:focus {
            border-color: #e9ab66;
            box-shadow: none;
        }
    </style>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('password') }}
{% endblock body_javascript %}
